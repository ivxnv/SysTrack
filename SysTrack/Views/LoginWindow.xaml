<Window x:Class="SysTrack.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anmelden" Height="250" Width="400" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" Spacing="15">
            <TextBlock Text="Benutzername:" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox"/>
            <TextBlock Text="Passwort:" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox"/>
            <Button Content="Anmelden" Width="100" HorizontalAlignment="Right" Click="OnLoginClicked"/>
        </StackPanel>
    </Grid>
</Window>
