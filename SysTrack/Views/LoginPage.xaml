<Page x:Class="SysTrack.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anmelden" Height="250" Width="400">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Benutzername:" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox"/>
            <TextBlock Text="Passwort:" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox"/>
            <Button Content="Anmelden" Width="100" HorizontalAlignment="Right" Click="OnLoginClicked"/>
            <Button Content="Registrieren" Click="OnRegisterClicked"/>
        </StackPanel>
    </Grid>
</Page>
