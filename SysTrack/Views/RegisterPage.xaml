<Page x:Class="SysTrack.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registrierung">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Benutzername:" FontWeight="Bold"/>
        <TextBox x:Name="UsernameTextBox"/>
        <TextBlock Text="Passwort:" FontWeight="Bold"/>
        <PasswordBox x:Name="PasswordBox"/>
        <TextBlock Text="Passwort wiederholen:" FontWeight="Bold"/>
        <PasswordBox x:Name="RepeatPasswordBox"/>
        <Button Content="Registrieren" Width="100" Click="OnRegisterClicked"/>
        <Button Content="Login" Click="OnLoginClicked"/>
    </StackPanel>

</Page>
